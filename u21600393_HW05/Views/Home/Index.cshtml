@model u21600393_HW05.Models.BooksVM


<div class="h2">Books</div>

<form>
    <div class="form-row">
        <div class="col">
            <input type="search" id="searchBookName" class="form-control" placeholder="Search Book Name">
        </div>
        <div class="col">
            <select id="dropType" class="form-control">
                <option value="" selected disabled>Select a Type</option>
                @foreach (var item in Model.Types)
                {
                    <option>@Html.DisplayFor(modelItem => item.Name)</option>
                }
            </select>
        </div>
        <div class="col">
            <select id="dropAuthor" class="form-control">
                <option value="" selected disabled>Select an Author</option>
                @foreach (var item in Model.Authors)
                {
                    <option>@Html.DisplayFor(modelItem => item.Name)</option>
                }
            </select>
        </div>
        <div class="col">
            @Html.ActionLink("Search", "SearchBookName", "Home", new { name = Html.Value("searchBookName") }, new { @class = "btn btn-primary" })

        </div>
        <div class="col">
            <button type="button" class="btn btn-danger btn-block">Clear</button>
        </div>
    </div>
</form>

<br />

<table class="table">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Author</th>
        <th>Type</th>
        <th>Page Count</th>
        <th>Points</th>
        <th>Status</th>
    </tr>
    @foreach (var book in Model.Books)
    {
        <tr>
            <td>@book.BookID</td>
            <td>@book.Name</td>
            <td>@book.AuthorID</td>
            <td>@book.typeID</td>
            <td>@book.pageCount</td>
            <td>@book.Point</td>
            <td>
                
            </td>
            <td>
                @Html.ActionLink("View", "Borrows", "Home", new { bookId = book.BookID}, new { @class = "btn btn-primary" })

            </td>
        </tr>
    }
</table>

